{
	"manifest_version": 2,
	"name": "News Article Text Extractor",
	"version": "1.0",
	"description": "Extracts and displays the main text content of an online news article",
	"permissions": ["activeTab", "https://*/*", "http://*/*"],
	"browser_action": {
	  "default_popup": "popup.html",
	  "default_icon": "logo.png"
	},
	"background": {
	  "scripts": ["background.js"]
	},
	"content_scripts": [
	  {
		"matches": ["https://*/*", "http://*/*"],
		"js": ["content.js"]
	  }
	]
  }
  